# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Configuration - using Groq (Llama models)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key

# Nvidia NIM API Configuration
# Get your API key from: https://build.nvidia.com/
NVIDIA_NIM_API_KEY=your_nvidia_nim_api_key

# Site Configuration
# Set this to your production domain (e.g., https://your-domain.com)
# For development, use http://localhost:9002
NEXT_PUBLIC_SITE_URL=http://localhost:9002

# Legacy Google AI (no longer used, but kept for reference)
# GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key
# GEMINI_API_KEY=your_gemini_api_key

# Resource Optimization Hub Configuration (All Free/Open Source)
# No additional API keys required - uses existing Groq AI

# Optional: Enable Resource Optimization features
NEXT_PUBLIC_ENABLE_RESOURCE_OPTIMIZATION=true

# Optional: Default business settings
DEFAULT_BUSINESS_HOURS={"start": "08:00", "end": "17:00", "days": ["monday", "tuesday", "wednesday", "thursday", "friday"]}
DEFAULT_CURRENCY=IDR
DEFAULT_TIMEZONE=Asia/Jakarta

# Resource Optimization Settings
# Auto-implementation thresholds (0-100)
AUTO_IMPLEMENT_CONFIDENCE_THRESHOLD=85
CRITICAL_STOCK_THRESHOLD=0.2
OVERTIME_WARNING_THRESHOLD=10

# Notification settings (free email via Supabase)
ENABLE_OPTIMIZATION_NOTIFICATIONS=true

